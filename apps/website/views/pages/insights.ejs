<%- include('../partials/header') %>

    <!-- Page Hero -->
    <section class="page-hero" aria-label="Insights hero">
        <div class="container">
            <span class="section-label" data-editable="true" data-model="Page" data-id="<%= page._id %>"
                data-field="hero_label" data-type="text">
                <%= page.hero_label %>
            </span>
            <h1 class="page-hero-title" data-editable="true" data-model="Page" data-id="<%= page._id %>"
                data-field="hero_title" data-type="html"><%- page.hero_title %></h1>
            <p class="page-hero-subtitle" data-editable="true" data-model="Page" data-id="<%= page._id %>"
                data-field="hero_subtitle" data-type="text">
                <%= page.hero_subtitle %>
            </p>
        </div>
    </section>

    <!-- Insights Grid -->
    <section class="section" style="background: var(--bg-secondary);" aria-label="AI insights and articles">
        <div class="container">
            <div class="insights-grid stagger-children">
                <% if (sections['insight']) { sections['insight'].forEach(i=> { %>
                    <article class="insight-card">
                        <div class="insight-image" <% if (i.extra.gradient) { %>style="background: <%= i.extra.gradient
                                %>;"<% } %>>
                                    <div class="img-overlay">
                                        <%= i.icon %>
                                    </div>
                        </div>
                        <div class="insight-body">
                            <div class="insight-meta">
                                <span class="insight-tag" data-editable="true" data-model="Section"
                                    data-id="<%= i.id %>" data-field="tag" data-type="text">
                                    <%= i.tag %>
                                </span>
                                <span>
                                    <%= i.extra.date || '' %>
                                </span>
                            </div>
                            <h2 data-editable="true" data-model="Section" data-id="<%= i.id %>" data-field="title"
                                data-type="text">
                                <%= i.title %>
                            </h2>
                            <p data-editable="true" data-model="Section" data-id="<%= i.id %>" data-field="description"
                                data-type="text">
                                <%= i.description %>
                            </p>
                            <a href="#" class="insight-link">Read more <span>→</span></a>
                        </div>
                    </article>
                    <% }) } %>
            </div>
        </div>
    </section>

    <!-- CTA Banner -->
    <section class="cta-banner" aria-label="Subscribe">
        <div class="container">
            <div class="cta-content reveal-scale">
                <h2>Stay <span class="text-gradient">Updated</span></h2>
                <p>Get our weekly AI insights delivered straight to your inbox.</p>
                <form class="cta-form" id="ctaForm" aria-label="Newsletter signup">
                    <input type="email" placeholder="Enter your email" aria-label="Email address" required>
                    <button type="submit" class="btn btn-primary">Subscribe <span class="btn-icon">→</span></button>
                </form>
            </div>
        </div>
    </section>

    <%- include('../partials/footer') %>