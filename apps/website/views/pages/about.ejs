<%- include('../partials/header', { page }) %>

    <!-- Hero Section -->
    <section class="page-hero" aria-label="About Da Sachin Sharma">
        <div class="container">
            <div class="hero-badge" data-editable="true" data-model="Page" data-id="<%= page._id %>"
                data-field="nav_label" data-type="text">
                <%= page.nav_label %>
            </div>
            <h1 class="hero-title" data-editable="true" data-model="Page" data-id="<%= page._id %>"
                data-field="hero_title" data-type="html"><%- page.hero_title %></h1>
            <p class="hero-subtitle" data-editable="true" data-model="Page" data-id="<%= page._id %>"
                data-field="hero_subtitle" data-type="text">
                <%= page.hero_subtitle %>
            </p>
        </div>
    </section>

    <!-- Founder Section -->
    <% const founder=(sections['about-founder'] || [])[0]; %>
        <% if (founder) { %>
            <section class="section" aria-label="About the Founder">
                <div class="container">
                    <% var fExtra=founder && founder.extra_json ? JSON.parse(founder.extra_json) : {}; var fStyle="" ;
                        if (fExtra.background_color) fStyle +=`background-color: ${fExtra.background_color}; `; if
                        (fExtra.padding) fStyle +=`padding: ${fExtra.padding};`; %>
                        <div class="about-founder-card glass-card" data-editable-section="true" data-model="Section"
                            data-id="<%= founder.id %>" data-extra="<%= founder.extra_json || '{}' %>" <%- fStyle ?
                            `style="${fStyle}" ` : '' %>>
                            <div class="about-founder-avatar">
                                <span class="founder-icon" data-editable="true" data-model="Section"
                                    data-id="<%= founder.id %>" data-field="icon" data-type="text">
                                    <%= founder.icon %>
                                </span>
                            </div>
                            <div class="about-founder-content">
                                <span class="founder-role" data-editable="true" data-model="Section"
                                    data-id="<%= founder.id %>" data-field="subtitle" data-type="text">
                                    <%= founder.subtitle %>
                                </span>
                                <h2 data-editable="true" data-model="Section" data-id="<%= founder.id %>"
                                    data-field="title" data-type="text">
                                    <%= founder.title %>
                                </h2>
                                <p data-editable="true" data-model="Section" data-id="<%= founder.id %>"
                                    data-field="description" data-type="text">
                                    <%= founder.description %>
                                </p>
                            </div>
                        </div>
                </div>
            </section>
            <% } %>

                <!-- Achievements -->
                <% const achievements=(sections['about-achievement'] || []); %>
                    <% if (achievements.length) { %>
                        <section class="section section-alt" aria-label="Key Achievements">
                            <div class="container">
                                <h2 class="section-title">Key <span class="text-gradient">Achievements</span></h2>
                                <div class="achievements-grid">
                                    <% achievements.forEach(ach=> { %>
                                        <% var achExtra=ach && ach.extra_json ? JSON.parse(ach.extra_json) : {}; var
                                            achStyle="" ; if (achExtra.background_color) achStyle +=`background-color:
                                            ${achExtra.background_color}; `; if (achExtra.padding) achStyle +=`padding:
                                            ${achExtra.padding};`; %>
                                            <div class="achievement-card glass-card" data-editable-section="true"
                                                data-model="Section" data-id="<%= ach.id %>"
                                                data-extra="<%= ach.extra_json || '{}' %>" <%- achStyle ?
                                                `style="${achStyle}" ` : '' %>>
                                                <span class="achievement-icon" data-editable="true" data-model="Section"
                                                    data-id="<%= ach.id %>" data-field="icon" data-type="text">
                                                    <%= ach.icon %>
                                                </span>
                                                <h3 data-editable="true" data-model="Section" data-id="<%= ach.id %>"
                                                    data-field="title" data-type="text">
                                                    <%= ach.title %>
                                                </h3>
                                                <p data-editable="true" data-model="Section" data-id="<%= ach.id %>"
                                                    data-field="description" data-type="text">
                                                    <%= ach.description %>
                                                </p>
                                            </div>
                                            <% }) %>
                                </div>
                            </div>
                        </section>
                        <% } %>

                            <!-- Values -->
                            <% const values=(sections['about-value'] || []); %>
                                <% if (values.length) { %>
                                    <section class="section" aria-label="Our Values">
                                        <div class="container">
                                            <h2 class="section-title">Our <span class="text-gradient">Values</span></h2>
                                            <div class="values-grid">
                                                <% values.forEach(v=> { %>
                                                    <% var valExtra=v && v.extra_json ? JSON.parse(v.extra_json) : {};
                                                        var valStyle="" ; if (valExtra.background_color) valStyle
                                                        +=`background-color: ${valExtra.background_color}; `; if
                                                        (valExtra.padding) valStyle +=`padding: ${valExtra.padding};`;
                                                        %>
                                                        <div class="value-card glass-card" data-editable-section="true"
                                                            data-model="Section" data-id="<%= v.id %>"
                                                            data-extra="<%= v.extra_json || '{}' %>" <%- valStyle ?
                                                            `style="${valStyle}" ` : '' %>>
                                                            <span class="value-icon" data-editable="true"
                                                                data-model="Section" data-id="<%= v.id %>"
                                                                data-field="icon" data-type="text">
                                                                <%= v.icon %>
                                                            </span>
                                                            <h3 data-editable="true" data-model="Section"
                                                                data-id="<%= v.id %>" data-field="title"
                                                                data-type="text">
                                                                <%= v.title %>
                                                            </h3>
                                                            <p data-editable="true" data-model="Section"
                                                                data-id="<%= v.id %>" data-field="description"
                                                                data-type="text">
                                                                <%= v.description %>
                                                            </p>
                                                        </div>
                                                        <% }) %>
                                            </div>
                                        </div>
                                    </section>
                                    <% } %>

                                        <!-- CTA -->
                                        <section class="section section-alt" aria-label="Connect with Da Sachin">
                                            <div class="container">
                                                <div class="cta-banner glass-card">
                                                    <h2>Ready to work with <span class="text-gradient">Da Sachin?</span>
                                                    </h2>
                                                    <p>Whether it's AI consulting, creative direction, or corporate
                                                        training â€” let's explore what AI can do for you.</p>
                                                    <div class="cta-buttons">
                                                        <a href="/contact" class="btn btn-primary btn-lg">Get In
                                                            Touch</a>
                                                        <a href="/portfolio" class="btn btn-outline btn-lg">View
                                                            Portfolio</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </section>

                                        <%- include('../partials/footer') %>